<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PatientEHR.Controls.FlyoutHeader"  HeightRequest="200" VerticalOptions="Center">
    <FlexLayout Direction="Column" BackgroundColor="#689e39" Padding="0,5,0,0">
            <Image x:Name="UserFaceImg" FlexLayout.Basis="75%" VerticalOptions="Center" Source="{Binding FaceImg}"/>
            <Label
                 FlexLayout.Basis="25%" 
                    x:Name="lbl_pInfo_name"
                       Text="{Binding PatientName}"
                       TextColor="White"
                       FontSize="Subtitle"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"/>
    </FlexLayout>
</ContentView>
